# Disable directory listing
Options -Indexes

# Enable rewrite engine
RewriteEngine On

# Route API requests to public/api.php
RewriteCond %{REQUEST_URI} ^/api\.php$ [NC]
RewriteRule ^(.*)$ public/$1 [L]

# The crucial call sign rewrite rule for the frontend
RewriteRule ^([A-z]+)/?$ /public/index.html [L]

# For all other requests, redirect to public directory
RewriteCond %{REQUEST_URI} !^/public/
RewriteRule ^(.*)$ public/$1 [L]

# Set the default directory index
DirectoryIndex public/index.html
